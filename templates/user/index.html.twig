{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}
{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    <h1>Users</h1>
    <ul>
        {% for user in users %}
            <li>{{ user.firstname }} - {{ user.lastname }} - {{ user.email }} - <a href="{{ path('user_profile', { 'byFirstname': user.firstname }) }}">Profile</a> </li>
        {% endfor %}
    </ul>
{% endblock %}